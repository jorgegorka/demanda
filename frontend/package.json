{
  "watch:tailwind": "postcss src/tailwind.css -o static/index.css -w",
  "name": "demanda-frontend",
  "version": "1.0.0",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "@tailwindcss/ui": "^0.7.0",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^12.0.0",
    "rollup": "^2.0.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^3.0.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sirv-cli": "^1.0.0",
    "svelte": "^3.0.0",
    "svelte-apollo": "^0.3.0",
    "svelte-preprocess": "^4.0.0",
    "tailwindcss": "^1.0.0"
  },
  "dependencies": {
    "apollo-boost": "^0.4.4",
    "apollo-client": "^2.4.0",
    "apollo-link-context": "^1.0.19",
    "date-fns": "^2.5.1",
    "graphql": "^15.0.0",
    "marked": "^2.0.0",
    "svelte-router-spa": "^5.0.0",
    "validate.js": "^0.13.1"
  },
  "scripts": {
    "build:tailwind": "NODE_ENV=production postcss src/tailwind.css -o public/utils.css",
    "watch:tailwind": "postcss src/tailwind.css -o public/utils.css -w",
    "build": "yarn build:tailwind && rollup -c",
    "autobuild": "rollup -c -w",
    "dev": "run-p start:dev autobuild",
    "start": "sirv public --single",
    "start:dev": "sirv public --single --dev"
  }
}
